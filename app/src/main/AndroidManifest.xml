<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="org.libreapps.projetqcm" >
    <!-- Permission INTERNET pour accéder au réseau -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProjetQCM"
        tools:targetApi="31" >
        <activity
            android:name=".QuestionActivity"
            android:exported="false"
            android:theme="@style/Theme.ProjetQCM" />
        <activity
            android:name=".ui.ProductActivity"
            android:exported="false"
            android:theme="@style/Theme.ProjetQCM"
            tools:ignore="MissingClass" /> <!-- SplashActivity comme activité de lancement -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.ProjetQCM.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- LoginActivity -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.ProjetQCM.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- RegistrationActivity -->
        <activity
            android:name=".RegistrationActivity"
            android:exported="false" /> <!-- MainActivity -->
        <activity
            android:name=".MainActivity"
            android:exported="false" /> <!-- ConnexionRest -->
        <activity
            android:name=".ui.ConnectionRest"
            android:exported="false"
            android:theme="@style/Theme.ProjetQCM" />
    </application>

</manifest>